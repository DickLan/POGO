{{!-- share by account-Iv100 and account-Legend --}}
{{!-- Up --}}
<div class="container mt-3">
  <div class="up-container">
    <div class="title text-center">
      <h1 class=" title mb-0 mx-auto">View Account</h1>
      <p class="text-extra-small pt-0 mt-0">Check the Pokémon account detailed info and more IV100 pokemon.
      </p>
    </div>
  </div>
</div>
{{!-- Mid --}}
<div class="container">
  <div class="mid-container row d-flex align-items-stretch">
    {{!-- left --}}
    <div class="mid-left col-12 col-lg-8 row">
      <div class="img-team  col-12 col-lg-2 ">
        <img src="/images/PokeTeams/{{account.team}}.png" alt="redTeam">
      </div>
      <div class="talk-to-client  col-12 col-lg-8 " style="font-size: 20px;">
        <span style="font-weight: 1000; color:aqua">Hey {{#if user.name}} {{user.name}} {{else}}Trainer {{/if}}! </span>
        <span>Ready to start on a journey with team
          {{account.team}}? <br>
          With your new Pokémon Go Account you will be more than ready to join us! <br>
          Buy team {{account.team}} Pokémon Go Accounts and let's beat others!</span>
      </div>
    </div>
    {{!-- right --}}
    <div class="mid-right col-12 col-lg-4" style="background-color: rgba(17, 17, 86, 0.787);">
      <div class="pricing-card">
        <div class="row" style="">
          <div class="fs-6">Today's price only!</div>
          <div class="price" style="color:white">
            <span style="">NT</span>
            <span style="font-size: 37px; ">{{account.price}}</span>
          </div>
          <div class="promises">
            <div class="promise">
              <img width="18px" src="/images/someIcon/checked.png" alt="">
              <span>Fast Delivery</span>
            </div>

            <div class="promise">
              <img width="18px" src="/images/someIcon/checked.png" alt="">
              <span>Safe Guarantee
              </span>
            </div>

            <div class="promise">
              <img width="18px" src="/images/someIcon/checked.png" alt="">
              <span>Lots of Fun
              </span>
            </div>

            <div class="promise">
              <img width="18px" src="/images/someIcon/checked.png" alt="">
              <span>Secure Payment
              </span>
            </div>

            <div class="promise">
              <img width="18px" src="/images/someIcon/checked.png" alt="">
              <span>Responsible Support
              </span>
            </div>

            <div class="promise">
              <img width="18px" src="/images/someIcon/checked.png" alt="">
              <span>Includes VAT</span>
            </div>

            <a class="btn btn-danger" style="border-radius: 50%;" href="">Buy now</a>

          </div>

        </div>
      </div>
    </div>


  </div>
</div>
{{!-- Down --}}
{{!-- detail info & IV100 & legend pokemons --}}
<div class="container">

  {{!-- mewoth + detail title --}}
  <div class="down-container">
    <div class="header-container">
      <div class="row justify-content-center text-center">
        <div class="row">
          <div class="col-lg-6 mx-auto col-12">
            <h3>Detail Info</h2>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-6 mx-auto col-12">
            <img src="/images/someIcon/meowth.png" alt="">
          </div>
        </div>

      </div>
    </div>

    {{!-- account info like level,stardust... --}}
    <h4 class="text-center text-uppercase">Account Overview</h4>
    <div class="up-info-container row">

      <div class="inner-table text-center col-lg-8 mx-auto">
        <div class="table-responsive  ">
          <table class="table " style="background-color:antiquewhite;">

            <thead>
              <tr>
                <th class="" scope="col">Item</th>
                <th scope="col">Content</th>
              </tr>
            </thead>

            <tbody>
              {{!-- account_id 編號 --}}
              <tr>
                <td style=""> Account Id</td>
                <td>{{account.accountId}}</td>
              </tr>
              {{!-- 隊伍 --}}
              <tr>
                <td>Team</td>
                <td>{{account.team}}</td>
              </tr>
              {{!-- 等級 --}}
              <tr>
                <td>Level</td>
                <td>{{account.level}}</td>
              </tr>
              {{!-- 星砂 --}}
              <tr>
                <td>Stardust (Unit:10k)</td>
                <td>{{account.stardust}}</td>
              </tr>
              {{!-- 價格 --}}
              <tr>
                <td>Price</td>
                <td>{{account.price}} NT</td>
              </tr>
              {{!-- youtube 如果有 --}}
              <tr>
                <td>Youtube</td>
                <td><a href="{{account.youtube}}">Click here!</a> </td>
              </tr>
            </tbody>
          </table>

        </div>
      </div>

    </div>