{{!-- the account be edited --}}
<div class="container">

  {{!-- this.id 方便辨認用 --}}
  <div class="mb-3 d-flex">
    <span>辨認用
      Id： {{this.id}}</span>
  </div>
  {{!-- acct id --}}
  <div class="mb-3 d-flex">
    <label for="accountId" class="form-label-sm form-control-sm inline-flex me-5">Account
      Id:</label>
    <input type="text" class="form-control-sm inline-flex" value="{{accountId}}" id="accountId" name="accountId">
  </div>
  {{!-- team --}}
  <div class="mb-3 d-flex">
    <label for="team" class="form-label-sm form-control-sm inline-flex me-5">Team:</label>
    <input type="text" class="form-control-sm inline-flex" value="{{this.team}}" name="team" id="team">
  </div>
  {{!-- level --}}
  <div class="mb-3 d-flex">
    <label for="level" class="form-label-sm form-control-sm inline-flex me-5">Level:</label>
    <input type="text" class="form-control-sm inline-flex" value="{{this.level}}" name="level" id="level">
  </div>
  {{!-- stardust --}}
  <div class="mb-3 d-flex">
    <label for="stardust" class="form-label-sm form-control-sm inline-flex me-5">Stardust:</label>
    <input type="text" class="form-control-sm inline-flex" value="{{this.stardust}}" name="stardust" id="stardust">
  </div>

  {{!-- price --}}
  <div class="mb-3 d-flex">
    <label for="price" class="form-label-sm form-control-sm inline-flex me-5">Price:</label>
    <input type="text" class="form-control-sm inline-flex" value="{{this.price}}" name="price" id="price">
  </div>
  {{!-- iv100 pokemons --}}
  <div class="mb-3 d-flex">
    <label for="contensIv100" class="form-label-sm form-control-sm inline-flex me-5">Iv100 pokemons:</label>
    <textarea class="form-control-sm inline-flex" name="contentsIv100" id="contentsIv100" cols="40"
      rows="7">{{this.contentsIv100}}</textarea>

  </div>
  {{!-- legend pokemons --}}
  <div class="mb-3 d-flex">
    <label for="contentsLegend" class="form-label-sm form-control-sm inline-flex me-5">ContentsLegend:</label>
    <textarea class="form-control-sm inline-flex" name="contentsLegend" id="contentsLegend" cols="40"
      rows="7">{{this.contentsLegend}}</textarea>
  </div>
  {{!-- youtube --}}
  <div class="mb-3 d-flex">
    <label for="youtube" class="form-label-sm form-control-sm inline-flex me-5">Youtube:</label>
    <input type="textarea" class="form-control-sm inline-flex" value="{{this.youtube}}" name="youtube" id="youtube">
  </div>



  <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
  <button type="submit" class="btn btn-primary">Submit</button>

</div>