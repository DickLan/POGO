<div class="d-flex align-items-between justify-content-center">


  <form action="" class=" inline-flex me-3">
    <Button type="submit">Edit all</Button>
  </form>

  <form action="" class=" inline-flex me-3">
    <Button type="submit">Display all</Button>
  </form>

  <form action="" class=" inline-flex me-3">
    <Button type="submit">Filter</Button>
  </form>

  <form action="" class="inline-flex ms-5">
    <label for="">Account ID</label>
    <input type="text">
    <Button type="submit">search</Button>
  </form>


</div>


<div class="account-container">

  <table class="table table-striped table-hover align-middle mb-0 bg-white">
    <thead class="bg-light">
      <tr>
        <th>Account ID</th>
        <th>Team</th>
        <th>Level</th>
        <th style="font-size: small;">Stardust <br> (unit:10k)</th>
        <th>Price</th>
        <th>Iv100 Pokemons</th>
        <th>Legend Pokemons</th>
        <th>Admin Control</th>
      </tr>
    </thead>


    <tbody>

      {{!-- each account this is sample --}}
      <tr>
        {{!-- account id --}}
        <td>
          <div class="d-flex align-items-center">
            <img src="/images/PokeTeams/blue.png" alt="team color" style="width: 45px; height: 45px"
              class="rounded-circle" />
            <div class="ms-3">
              <p class="fw-bold mb-1">John Doe</p>
            </div>
          </div>
        </td>
        {{!-- team --}}
        <td>
          <p class="fw-normal mb-1">Blue</p>
        </td>
        {{!-- level --}}
        <td>
          <span class="badge badge-success rounded-pill d-inline">40</span>
        </td>
        {{!-- stardust --}}
        <td>
          <span class="badge badge-success rounded-pill d-inline">55555</span>
        </td>
        {{!-- price --}}
        <td>30</td>
        {{!-- iv100 pokemon --}}
        <td>
          <span class="badge badge-success rounded-pill d-inline">iv100</span>
        </td>
        {{!-- legend pokemon --}}
        <td>
          <span class="badge badge-success rounded-pill d-inline">legend</span>
        </td>
        <td>
          <button type="button" class="btn btn-link btn-sm btn-rounded">
            Edit
          </button>
          <span>|</span>
          <button type="button" class="btn btn-link btn-sm btn-rounded">
            Delete
          </button>
        </td>
      </tr>

      {{#each accounts}}

      {{!-- each account --}}
      <tr>
        {{!-- account id --}}
        <td>
          <div class="d-flex align-items-center">
            <img src="/images/PokeTeams/{{this.team}}.png" alt="team color" style="width: 45px; height: 45px"
              class="rounded-circle" />
            <div class="ms-3">
              <p class="fw-bold mb-1">{{this.accountId}}</p>
            </div>
          </div>
        </td>
        {{!-- team --}}
        <td>
          <p class="fw-normal mb-1">{{this.accountId}}</p>
        </td>
        {{!-- level --}}
        <td>
          <span class="badge badge-success rounded-pill d-inline">{{this.level}}</span>
        </td>
        {{!-- stardust --}}
        <td>
          <span class="badge badge-success rounded-pill d-inline">{{this.stardust}}</span>
        </td>
        {{!-- price --}}
        <td>{{this.price}}</td>
        {{!-- iv100 pokemon --}}
        <td>
          <span class="badge badge-success rounded-pill d-inline">{{subString this.contentsIv100 0 15}}...</span>
        </td>
        {{!-- legend pokemon --}}
        <td>
          <span class="badge badge-success rounded-pill d-inline">
            {{subString this.contentsLegend 0 15}}...
          </span>
        </td>
        <td>
          <!-- Button trigger modal -->
          <button type="button" class="btn btn-link btn-sm btn-rounded" data-bs-toggle="modal"
            data-bs-target="#editModal{{this.id}}">
            Edit
          </button>
          <span>{{this.id}}</span>
          <span>|</span>
          <button type="button" class="btn btn-link btn-sm btn-rounded">
            Delete
          </button>
        </td>
      </tr>
      {{/each}}

    </tbody>

  </table>
</div>



{{#each accounts}}
<!-- Modal -->
<div class="modal fade" id="editModal{{this.id}}" tabindex="-1" aria-labelledby="editModal{{this.id}}Label"
  aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="editModal{{this.id}}Label">Modify account</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        {{!-- form start here --}}
        <form action="/admin/accounts/{{this.id}}?_method=PUT" method="post">

          {{!-- the account be edited --}}
          <div class="container">

            {{!-- this.id 方便辨認用 --}}
            <div class="mb-3 d-flex">
              <span>辨認用
                Id： {{this.id}}</span>
            </div>
            {{!-- acct id --}}
            <div class="mb-3 d-flex">
              <label for="accountId" class="form-label-sm form-control-sm inline-flex me-5">Account
                Id:</label>
              <input type="text" class="form-control-sm inline-flex" value="{{accountId}}" id="accountId"
                name="accountId">
            </div>
            {{!-- team --}}
            <div class="mb-3 d-flex">
              <label for="team" class="form-label-sm form-control-sm inline-flex me-5">Team:</label>
              <input type="text" class="form-control-sm inline-flex" value="{{this.team}}" name="team" id="team">
            </div>
            {{!-- level --}}
            <div class="mb-3 d-flex">
              <label for="level" class="form-label-sm form-control-sm inline-flex me-5">Level:</label>
              <input type="text" class="form-control-sm inline-flex" value="{{this.level}}" name="level" id="level">
            </div>

            {{!-- price --}}
            <div class="mb-3 d-flex">
              <label for="price" class="form-label-sm form-control-sm inline-flex me-5">Price:</label>
              <input type="text" class="form-control-sm inline-flex" value="{{this.price}}" name="price" id="price">
            </div>
            {{!-- iv100 pokemons --}}
            <div class="mb-3 d-flex">
              <label for="contensIv100" class="form-label-sm form-control-sm inline-flex me-5">Iv100 pokemons:</label>
              <textarea class="form-control-sm inline-flex" name="contensIv100" id="contensIv100" cols="40"
                rows="7">{{this.contentsIv100}}</textarea>

            </div>
            {{!-- legend pokemons --}}
            <div class="mb-3 d-flex">
              <label for="contensLegend" class="form-label-sm form-control-sm inline-flex me-5">ContensLegend:</label>
              <textarea class="form-control-sm inline-flex" name="contensLegend" id="contensLegend" cols="40"
                rows="7">{{this.contentsLegend}}</textarea>
            </div>
            {{!-- youtube --}}
            <div class="mb-3 d-flex">
              <label for="youtube" class="form-label-sm form-control-sm inline-flex me-5">Youtube:</label>
              <input type="textarea" class="form-control-sm inline-flex" value="{{this.youtube}}" name="youtube"
                id="youtube">
            </div>



            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-primary">Submit</button>

          </div>

        </form>

      </div>

    </div>
  </div>
</div>
{{/each}}